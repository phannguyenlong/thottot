{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "semi": ["error", "never"],
    "camelcase": ["warn", { "properties": "always" }],
    "quotes": ["error", "single"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": 0,
    "eqeqeq": ["error", "smart"],
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-duplicate-imports": ["warn", { "includeExports": true }],
    "no-underscore-dangle": 0,
    "prettier/prettier": "error"
  }
}

